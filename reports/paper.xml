<!-- File: custom_paperformat.xml -->
<odoo>
    <record id="paperformat_pos_receipt" model="report.paperformat">
        <field name="name">POS Receipt</field>
        <field name="default" eval="False"/>
        <field name="format">custom</field>
        <field name="page_height">1000</field> <!-- Set to a large value for variable length -->
        <field name="page_width">80</field> <!-- Typical receipt width in mm -->
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">5</field>
        <field name="margin_left">1</field>
        <field name="margin_right">1</field>
        <field name="dpi">90</field>
    </record>

</odoo>
