<!-- File: custom_sale_order_receipt_template.xml -->
<odoo>
    <template id="report_sale_order_document">
        <t t-call="web.basic_layout">
            <t t-foreach="docs" t-as="o">
                <div class="pos_receipt">
                    <!-- Custom CSS to ensure printing on one page -->
                    <style>
                        @media print {
                            @page {
                                size: auto;  /* Let the page size be auto to fit content */
                                margin: 10mm;  /* Optional margin for aesthetics */
                            }
                            html, body {
                                width: 100%;
                                margin: 0;
                                padding: 0;
                                overflow: visible;
                            }
                            .pos_receipt {
                                width: 100%;
                                page-break-inside: avoid;  /* Prevent breaking inside receipt content */
                            }
                            table {
                                width: 100%;
                                border-collapse: collapse;
                            }
                            th, td {
                                border: 1px solid #000;
                                padding: 5px;
                            }
                            .company_info, .order_info, .order_lines, .total_amount, .qr_code, .receipt_footer {
                                page-break-inside: avoid;  /* Avoid breaking these sections across pages */
                            }
                        }
                    </style>
                    <!-- Company Info -->
                    <div class="company_info">
                        <t t-if="o.company_id.logo">
                            <img t-att-src="'data:image/png;base64,%s' % o.company_id.logo.decode('utf-8')"
                                 style="max-width: 50mm; height: auto; display: block; margin: 0 auto;"/>
                        </t>
                        <div class="company_name">
                            <span t-field="o.company_id.name"/>
                        </div>
                        <div class="company_address">
                            <span t-field="o.company_id.partner_id.contact_address"/>
                        </div>
                    </div>

                    <!-- Sale Order Info -->
                    <div class="order_info">
                        <h2>Receipt</h2>
                        <div><strong>Order:</strong> <span t-field="o.name"/></div>
                        <div><strong>Date:</strong> <span t-field="o.date_order" t-field-options="{'widget': 'datetime'}"/></div>
                        <div><strong>Customer:</strong> <span t-field="o.partner_id.name"/></div>
                    </div>

                    <!-- Order Lines -->
                    <div class="order_lines">
                        <table>
                            <tr>
                                <th>Qty</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>Total</th>
                            </tr>
                            <t t-foreach="o.order_line" t-as="line">
                                <tr>
                                    <td><span t-field="line.product_uom_qty"/></td>
                                    <td><span t-field="line.name"/></td>
                                    <td>
                                        <span t-field="line.price_unit" t-field-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                    <td>
                                        <span t-field="line.price_subtotal" t-field-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </div>

                    <!-- Total Amount -->
                    <div class="total_amount">
                        <div><strong>Total:</strong>
                            <span t-field="o.amount_total" t-field-options="{'widget': 'monetary', 'display_currency': o.currency_id}"/>
                        </div>
                    </div>

                    <!-- QR Code -->
                    <div class="qr_code">
                        <t t-if="o.qr_code">
                            <img t-att-src="'data:image/png;base64,%s' % o.qr_code.decode('utf-8')"/>
                        </t>
                    </div>
                    <!-- Footer -->
                    <div class="receipt_footer" style="text-align: center; margin-top: 20px; padding-top: 10px; border-top: 1px solid #000;">
                        <p>No refund of money after payments. Thank you for your Patronage!</p>
                        <p>Contact us: <span t-field="o.company_id.phone" t-if="o.company_id.phone"/>
                            <t t-if="o.company_id.phone and o.company_id.partner_id.mobile"> / </t>
                            <span t-field="o.company_id.partner_id.mobile" t-if="o.company_id.partner_id.mobile"/>
                        </p>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
